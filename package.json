{
	"name": "node-ts-template",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only src/app/index.ts",
		"build": "pnpm run build:clean && pnpm run build:run",
		"build:clean": "rm -rf dist; exit 0",
		"build:run": "tsc",
		"start": "cross-env NODE_ENV=production node dist/src/app/index.js",
		"test:unit": "cross-env NODE_ENV=test jest --coverage",
		"test:watch": "cross-env NODE_ENV=test jest --watchAll",
		"lint": "eslint --fix .",
		"prettier": "prettier --write .",
		"prepare": "husky",
		"commitlint": "commitlint --edit"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@commitlint/cli": "^19.3.0",
		"@commitlint/config-conventional": "^19.2.2",
		"@eslint/js": "9.6.0",
		"@swc/core": "1.6.7",
		"@swc/jest": "0.2.36",
		"@types/cors": "^2.8.17",
		"@types/express": "4.17.21",
		"@types/jest": "29.5.12",
		"@types/node": "^20.14.9",
		"@types/supertest": "6.0.2",
		"@typescript-eslint/eslint-plugin": "^7.15.0",
		"@typescript-eslint/parser": "^7.15.0",
		"cross-env": "^7.0.3",
		"dotenv": "^16.4.5",
		"eslint": "8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-import-resolver-typescript": "^3.6.1",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-prettier": "^5.1.3",
		"globals": "^15.8.0",
		"husky": "^9.0.11",
		"jest": "29.7.0",
		"prettier": "3.3.2",
		"supertest": "7.0.0",
		"ts-node-dev": "2.0.0",
		"typescript": "5.5.3",
		"typescript-eslint": "^7.15.0"
	},
	"dependencies": {
		"cors": "^2.8.5",
		"eslint-plugin-jest": "^28.6.0",
		"express": "4.19.2",
		"express-rate-limit": "^7.3.1",
		"helmet": "^7.1.0",
		"lint-staged": "^15.2.7"
	},
	"lint-staged": {
		"{src,tests}/**/*.ts": [
			"pnpm prettier",
			"pnpm lint"
		]
	}
}
